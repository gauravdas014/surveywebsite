<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <title>Survey</title>
</head>
<style>
  body {
    overflow-x: hidden;
  }

  .welcome-text {
    text-align: center;
    margin-top: 50px;
    padding: 0 20px;
  }

  .welcome-text-2 {
    text-align: center;
    margin-top: 50px;
  }

  .main-section {
    width: 600px;
    margin: 50px auto;
    padding: 50px;
  }

  .submit-question-btn {
    background-color: #0275d8;
    color: white;
    font-size: 18px;
    border: none;
    padding: 8px 20px;
    margin-top: 10px;
    border-radius: 5px;
  }

  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td,
  th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #dddddd;
  }

  .main {
    padding: 50px;
  }

  .tab {
    overflow: hidden;
    border: 1px solid #ccc;
    background-color: #f1f1f1;
  }

  /* Style the buttons inside the tab */
  .tab button {
    background-color: inherit;
    float: left;
    border: none;
    outline: none;
    cursor: pointer;
    padding: 14px 16px;
    transition: 0.3s;
    font-size: 17px;
  }

  /* Change background color of buttons on hover */
  .tab button:hover {
    background-color: #ddd;
  }

  /* Create an active/current tablink class */
  .tab button.active {
    background-color: #ccc;
  }

  /* Style the tab content */
  .tabcontent {
    display: none;
    padding: 6px 12px;
    border: 1px solid #ccc;
    border-top: none;
  }

  @media only screen and (max-width: 600px) {
    .main-section {
      width: 90%;
      margin: 50px auto;
      padding: 40px;
    }

    .welcome-text {
      text-align: center;
      margin-top: 30px;
      padding: 0 20px;
    }

    .welcome-text-2 {
      text-align: center;
      margin-top: 30px;
    }
  }
</style>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/admin/dashboard">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      </ul>
      <button type="button" onclick="location.href='/question/pdf/<%= subject %>';" class="btn btn-warning">Download PDF</button> &nbsp; &nbsp; &nbsp;
      <button type="button" onclick="location.href='/user/signout';" class="btn btn-warning">Sign Out</button>
    </div>
  </nav>

  <div class="main">
    <h1 style="text-decoration: underline;">Subject</h1>
    <% if(subject==="cd" ){ %>
      <h2>Compiler Design</h2>
      <% } else if(subject==="algo" ) { %>
        <h2>Algorithms</h2>
        <% } else if(subject==="cn" ) { %>
          <h2>Computer Networks</h2>
          <% } else if(subject==="dbms" ) { %>
            <h2>DBMS</h2>
            <% } else if(subject==="ds" ) { %>
              <h2>Data Structures</h2>
              <% } else if(subject==="os" ) { %>
                <h2>Operating System</h2>
                <% } %>
                  <br />

                  <div class="tab">
                    <button class="tablinks" onclick="openCity(event, 'All')">All</button>
                    <button class="tablinks" onclick="openCity(event, 'Verified')">Verified</button>
                    <button class="tablinks" onclick="openCity(event, 'Unverified')"
                      id="defaultOpen">Unverified</button>
                  </div>

                  <div id="All" class="tabcontent">
                    <table>
                      <tr>
                        <th>#</th>
                        <th>Question</th>
                        <th>Answer</th>
                        <th>Verified</th>
                        <th>Edit</th>
                      </tr>
                      <% for(let i=0; i < questions.length; i++) { %>
                        <tr>
                          <td>
                            <%= i+1 %>
                          </td>
                          <td>
                            <%= questions[i].question %>
                          </td>
                          <td>
                            <%= questions[i].answer %>
                          </td>
                          <td>
                            <% if(questions[i].isVerified){ %>
                              <form method="POST" action="/question/verify/<%= subject %>/<%=questions[i]._id%>">
                                <span style="color: green;">&#9989;</span> &nbsp;
                                &nbsp; &nbsp;
                                <button type="submit" formmethod="post" class="btn btn-primary">Mark Unverified</button>
                              </form>
                              <% } else{ %>
                                <form method="POST" action="/question/verify/<%= subject %>/<%=questions[i]._id%>">
                                  <span style="color: red;">&#10060; </span>
                                  &nbsp; &nbsp; &nbsp; <button type="submit" formmethod="post"
                                    class="btn btn-primary">Mark Verified</button>
                                </form>
                                <% } %>
                          </td>
                          <td>
                            <a href="/question/edit/<%= subject %>/<%=questions[i]._id%>">Edit</a>
                          </td>
                        </tr>
                        <% } %>
                    </table>
                  </div>

                  <div id="Verified" class="tabcontent">
                    <table>
                      <tr>
                        <th>#</th>
                        <th>Question</th>
                        <th>Answer</th>
                        <th>Verified</th>
                        <th>Edit</th>
                      </tr>

                      <% for(let i=0; i < verifiedQuestions.length; i++) { %>
                        <tr>
                          <td>
                            <%= i+1 %>
                          </td>
                          <td>
                            <%= verifiedQuestions[i].question %>
                          </td>
                          <td>
                            <%= verifiedQuestions[i].answer %>
                          </td>
                          <td>
                            <form method="POST" action="/question/verify/<%= subject %>/<%=verifiedQuestions[i]._id%>">
                              <span style="color: green;">&#9989;</span> &nbsp;
                              &nbsp; &nbsp;
                              <button type="submit" formmethod="post" class="btn btn-primary">Mark Unverified</button>
                            </form>
                          </td>
                          <td>
                            <a href="/question/edit/<%= subject %>/<%=verifiedQuestions[i]._id%>">Edit</a>
                          </td>
                        </tr>

                        <% } %>
                    </table>
                  </div>

                  <div id="Unverified" class="tabcontent">
                    <table>
                      <tr>
                        <th>#</th>
                        <th>Question</th>
                        <th>Answer</th>
                        <th>Verified</th>
                        <th>Edit</th>
                      </tr>
                      <% for(let i=0; i < nonVerifiedQuestions.length; i++) { %>
                        <tr>
                          <td>
                            <%= i+1 %>
                          </td>
                          <td>
                            <%= nonVerifiedQuestions[i].question %>
                          </td>
                          <td>
                            <%= nonVerifiedQuestions[i].answer %>
                          </td>
                          <td>
                            <form method="POST"
                              action="/question/verify/<%= subject %>/<%=nonVerifiedQuestions[i]._id%>">
                              <span style="color: red;">&#10060; </span>
                              &nbsp; &nbsp; &nbsp; <button type="submit" formmethod="post" class="btn btn-primary">Mark
                                Verified</button>
                            </form>
                          </td>
                          <td>
                            <a href="/question/edit/<%= subject %>/<%=nonVerifiedQuestions[i]._id%>">Edit</a>
                          </td>
                        </tr>
                        <% } %>
                    </table>
                  </div>
  </div>
</body>
<script>
  function openCity(evt, cityName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(cityName).style.display = "block";
    evt.currentTarget.className += " active";
  }
  document.getElementById("defaultOpen").click();
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</html>